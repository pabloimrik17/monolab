{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "master",
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": ["default"],
        "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
    },
    "nxCloudId": "67f985a4bdd1693cbb6398fa",
    "targetDefaults": {
        "dev": {
            "dependsOn": ["^dev"]
        },
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/tsconfig.tsbuildinfo"
            ]
        },
        "lint:eslint": {
            "cache": true,
            "dependsOn": ["^lint:eslint"],
            "inputs": ["default", "{workspaceRoot}/eslint.config.ts"]
        },
        "lint:knip": {
            "cache": true,
            "dependsOn": ["^lint:knip"],
            "inputs": ["default", "{workspaceRoot}/knip.config.ts"]
        },
        "lint:prettier": {
            "cache": true,
            "dependsOn": ["^lint:prettier"],
            "inputs": [
                "default",
                "{workspaceRoot}/.prettierrc",
                "{workspaceRoot}/.prettierignore"
            ]
        }
    },
    "plugins": [
        {
            "plugin": "@nx/js/typescript",
            "options": {
                "typecheck": {
                    "targetName": "typecheck"
                },
                "build": {
                    "targetName": "build",
                    "configName": "tsconfig.lib.json",
                    "buildDepsName": "build-deps",
                    "watchDepsName": "watch-deps"
                }
            }
        }
    ],
    "release": {
        "projects": ["packages/is-even", "packages/is-odd"],
        "projectsRelationship": "independent",
        "version": {
            "conventionalCommits": true,
            "preserveLocalDependencyProtocols": true
        },
        "changelog": {
            "projectChangelogs": {
                "createRelease": "github"
            }
        }
    }
}
