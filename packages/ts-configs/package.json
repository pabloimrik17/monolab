{
    "name": "@monolab/ts-configs",
    "version": "0.3.4",
    "private": false,
    "sideEffects": false,
    "type": "module",
    "exports": {
        "./tsconfig.base.json": "./tsconfig.base.json",
        "./package.json": "./package.json"
    },
    "files": [
        "tsconfig.base.json",
        "package.json",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "pnpm run build:typecheck",
        "build:typecheck": "tsc --noEmit",
        "lint:eslint": "eslint --cache --max-warnings 60 .",
        "lint:eslint:config-check": "eslint-config-prettier src/index.ts",
        "lint:eslint:fix": "eslint --cache --max-warnings 60 --fix .",
        "lint:knip": "knip --max-issues 100",
        "lint:knip:fix": "knip --fix",
        "lint:prettier": "prettier . --check",
        "lint:prettier:fix": "prettier . --write",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest"
    },
    "devDependencies": {
        "typescript": "5.9.2",
        "vitest": "catalog:"
    },
    "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
    "engines": {
        "node": "22.17.0",
        "pnpm": "10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
    }
}
