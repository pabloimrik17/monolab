{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        /* Node.js Environment */
        "types": ["node"],

        /* Module Configuration */
        "module": "ESNext",
        "moduleResolution": "bundler",

        /* Interop & Compatibility */
        "allowSyntheticDefaultImports": true,

        /* Build Output */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}
