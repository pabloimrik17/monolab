{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        /* Node.js Environment */
        "types": ["node"],

        /* Module Configuration */
        "module": "NodeNext",
        "rewriteRelativeImportExtensions": true,

        /* Interop & Compatibility */
        "allowSyntheticDefaultImports": true,

        /* Build Output */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}
