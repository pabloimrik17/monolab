{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "preserve",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test-d.ts",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.browser.test.ts",
        "**/*.browser.test.tsx",
        "**/*.integration.ts"
    ],
    "references": [
        {
            "path": "../react-hooks"
        },
        {
            "path": "../ts-types"
        }
    ]
}
