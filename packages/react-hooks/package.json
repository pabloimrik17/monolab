{
    "name": "@monolab/react-hooks",
    "version": "0.3.0",
    "private": false,
    "author": "Pablo F.G.",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "pnpm run build:typecheck && pnpm run build:lib",
        "build:check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
        "build:lib": "tsdown",
        "build:typecheck": "tsc --noEmit",
        "lint:eslint": "eslint --cache --max-warnings 60 .",
        "lint:eslint:config-check": "eslint-config-prettier src/index.ts",
        "lint:eslint:fix": "eslint --cache --max-warnings 60 --fix .",
        "lint:knip": "knip --max-issues 100",
        "lint:knip:fix": "knip --fix",
        "lint:prettier": "prettier . --check",
        "lint:prettier:fix": "prettier . --write",
        "test:browser": "vitest run --browser.enabled=true src/hooks/*.browser.test.tsx",
        "test:browser:watch": "vitest --browser.enabled=true src/hooks/*.browser.test.tsx",
        "test:integration": "vitest run src/**/*.integration.ts",
        "test:integration:watch": "vitest src/**/*.integration.ts",
        "test:mutation": "stryker run",
        "test:mutation:report": "open reports/mutation/index.html",
        "test:types": "vitest --typecheck.enabled --run",
        "test:types:watch": "vitest --typecheck.enabled",
        "test:ui": "vitest --ui",
        "test:unit": "vitest run",
        "test:unit:coverage": "vitest run --coverage",
        "test:unit:watch": "vitest"
    },
    "dependencies": {
        "tslib": "2.8.1"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "0.18.2",
        "@testing-library/react": "catalog:",
        "@types/react": "18.3.26",
        "jsdom": "catalog:",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "tsdown": "0.15.9",
        "typescript": "5.9.3",
        "vitest": "catalog:"
    },
    "peerDependencies": {
        "react": "19.2.0"
    },
    "packageManager": "pnpm@10.19.0",
    "engines": {
        "node": "22.21.0",
        "pnpm": "10.19.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
