{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "preserve",
        "moduleResolution": "bundler",
        "lib": ["ES2023", "dom"],
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "composite": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test-d.ts",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.browser.test.ts",
        "**/*.browser.test.tsx",
        "**/*.integration.ts"
    ]
}
